<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.HealthReportUpload">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25pt"
        android:background="@drawable/background_view_page"
        android:orientation="horizontal">

        <TextView
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25pt"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Upload Health Report"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/colorMain"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/upload_health_report_image_view"
                    android:scaleType="fitCenter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/camera"/>


                <LinearLayout
                    android:id="@+id/upload_health_report_image"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/camera"/>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:text="Take a photo"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:text="Or"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:text="Upload from Device"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/health_report_file_name"
                android:textSize="18sp"
                android:hint="File Name"
                android:paddingLeft="8dp"
                android:layout_margin="16dp"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="24pt"
                android:background="@drawable/ambulance_search"/>

            <EditText
                android:id="@+id/health_report_doctor_name"
                android:paddingLeft="8dp"
                android:textSize="18sp"
                android:hint="Doctor Name"
                android:inputType="text"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="24pt"
                android:background="@drawable/ambulance_search"/>


            <Button
                android:id="@+id/health_report_submit"
                android:textStyle="bold"
                android:textColor="@color/colorMain"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:background="@drawable/search_box"
                android:layout_margin="32dp"
                android:layout_gravity="center"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"/>



        </LinearLayout>
    </ScrollView>

</LinearLayout>