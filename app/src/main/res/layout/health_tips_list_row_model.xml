<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/getTipsDetails"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    android:layout_marginRight="3pt"
    android:layout_marginLeft="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="10dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:padding="5dp"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/colorSubMain"
            android:background="@drawable/search_box"
            android:id="@+id/emptySMS_TV"
            android:text="No image\navailable"
            android:layout_width="250dp"
            android:layout_height="250dp"/>
        
        <ImageView
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginStart="2dp"
            android:id="@+id/tipListImage"
            android:src="@drawable/empty_image"
            android:layout_width="250dp"
            android:layout_height="250dp"/>

        <TextView
            android:padding="10dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/colorMain"
            android:background="@drawable/search_box3"
            android:id="@+id/health_tips_textTV"
            android:layout_marginStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>