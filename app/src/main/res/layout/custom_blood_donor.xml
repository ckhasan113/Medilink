<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="475dp"
    android:background="@drawable/custom_appoi"
    android:layout_gravity="center">
    <TextView
        android:background="@drawable/circel_background"
        android:id="@+id/txtclose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textColor="#000"
        android:text="X"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill below requirements"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="24sp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAlignment="textStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:textSize="18sp"
                android:textColor="#FFF"/>

            <EditText
                android:paddingLeft="10dp"
                android:background="@drawable/search_box"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="3"
                android:textSize="18sp"
                android:hint="Pesaint Name"
                android:textColor="#000"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAlignment="textStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hospital"
                android:textSize="18sp"
                android:textColor="#FFF"/>

            <EditText
                android:paddingLeft="10dp"
                android:background="@drawable/search_box"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="3"
                android:textSize="18sp"
                android:hint="Hospital Name"
                android:textColor="#000"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAlignment="textStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="How many bag You need?"
                android:textSize="18sp"
                android:textColor="#FFF"/>

            <LinearLayout
                android:gravity="center"
                android:background="@drawable/search_box"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="3" >

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:entries="@array/number"
                    >

                </Spinner>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/confirmBlood"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="40pt"
        android:layout_gravity="center"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/search_box"/>


</LinearLayout>