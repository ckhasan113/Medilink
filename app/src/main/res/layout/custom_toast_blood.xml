<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#43A047" xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_toast_layout_coming_soon"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="5dp" >

    <TextView
        android:drawableTop="@drawable/correct_128"
        android:textStyle="bold"
        android:padding="5dp"
        android:id="@+id/text_coming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Soon Donor Will  \nContact you"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="30sp"/>

</LinearLayout>