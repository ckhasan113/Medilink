<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.PetFeedDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80pt">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/feed1" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:src="@drawable/button_back_black" />

    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pet Feed"
                    android:textColor="#000"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_marginRight="16dp"
                    android:gravity="right|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rateing "
                        android:textSize="20sp" />
                    <TextView
                        android:layout_marginLeft="4dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="* * * * *"
                        android:textSize="20sp"
                        android:textColor="#FDD835"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:textColor="@color/colorMain"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BDT 800 TK"
                android:textSize="20sp" />

            <TextView
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amiko"
                android:lineSpacingExtra="5dp"
                android:text="ental Care - Every dog deserves a happy, healthy mouth. Dogs live their life through their mouths, so keeping their teeth and gums healthy is critical for them. "
                />

            <TextView

                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Address"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:padding="10dp"
                android:background="@drawable/box"
                android:layout_marginTop="4dp"
                android:inputType="textMultiLine"
                android:lines="3"
                android:minLines="4"
                android:gravity="top|left"
                android:textColor="#000"
                android:textColorHint="#000"
                android:maxLines="4"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scrollbars="vertical"
                />
            <TextView

                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:padding="10dp"
                android:background="@drawable/box"
                android:layout_marginTop="4dp"
                android:inputType="number"
                android:lines="1"
                android:minLines="1"
                android:gravity="top|left"
                android:textColor="#000"
                android:textColorHint="#000"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scrollbars="vertical"
                />

            <TextView

                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Cash on Delivery"
                android:textColor="@color/colorMain"
                android:textSize="18sp" />


            <Button
                android:fontFamily="@font/amiko"
                android:layout_marginBottom="64dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/colorMain"
                android:text="Order Confirm"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:background="@drawable/search_box"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>





        </LinearLayout>
    </ScrollView>

</LinearLayout>