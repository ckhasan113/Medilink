<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".physiotherapist.ConfirmPhysioActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25pt"
        android:background="@drawable/background_view_page"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Confirm Physiotherapist"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/physioAddPrescriptionImageBtn"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="3dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/add_prescription" />

            <TextView
                android:id="@+id/prescription"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Prescription"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/physio_doctor_reference"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/write_text_5"
                android:fontFamily="@font/amiko"
                android:gravity="center"
                android:hint="Doctor Reference"
                android:includeFontPadding="true"
                android:inputType="textEmailAddress"
                android:padding="1dp"
                android:singleLine="true"
                android:textColor="@color/colorMain"
                />


            <LinearLayout
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/physio_package_name"
                    android:textColor="@color/colorMain"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly"/>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_marginBottom="64dp"
                android:id="@+id/confirmPhysiotherapist"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/colorMain"
                app:cardCornerRadius="10dp"
                app:contentPadding="8dp"

                >

                <LinearLayout
                    android:layout_margin="2dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:layout_gravity="left"
                        android:src="@drawable/email"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <View
                        android:layout_marginLeft="20dp"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#fff"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/rubik_bold"
                        android:gravity="center"
                        android:text="Confirm"
                        android:textColor="#fff"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </ScrollView>

</LinearLayout>