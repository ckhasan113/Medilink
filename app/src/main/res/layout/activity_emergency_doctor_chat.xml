<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.EmergencyDoctorChat">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:background="@color/colorMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="#FFF"
                        android:layout_marginLeft="40dp"
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="#000"
                            android:layout_marginRight="32dp"
                            android:layout_marginLeft="32dp"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:text="Hellow"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="8dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp">
                            <ImageView
                                android:background="@drawable/ahsan"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="32dp"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="#FFF"
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="8dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp">
                                <ImageView
                                    android:background="@drawable/ahsan"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <TextView
                            android:textColor="#000"
                            android:layout_marginRight="32dp"
                            android:layout_marginLeft="32dp"
                            android:textSize="24sp"
                            android:gravity="center_vertical"
                            android:text="Hellow,\nhow can i help you"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="32dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="#FFF"
                        android:layout_marginLeft="40dp"
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="#000"
                            android:layout_marginRight="32dp"
                            android:layout_marginLeft="32dp"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:text="Thanks you for response"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="8dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp">
                            <ImageView
                                android:background="@drawable/ahsan"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="32dp"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginRight="40dp"
                        android:background="#FFF"
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="8dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp">
                                <ImageView
                                    android:background="@drawable/ahsan"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <TextView
                            android:textColor="#000"
                            android:layout_marginRight="32dp"
                            android:layout_marginLeft="32dp"
                            android:textSize="24sp"
                            android:gravity="center_vertical"
                            android:text="You are most welcome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">



            <EditText
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/box"
                android:layout_marginTop="4dp"
                android:inputType="textMultiLine"
                android:lines="3"
                android:minLines="4"
                android:gravity="top|left"
                android:textColor="#000"
                android:textColorHint="#000"
                android:maxLines="4"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:scrollbars="vertical"
                />


                <ImageButton
                    android:background="@null"
                    android:src="@drawable/sent32"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>