<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.EmergencyDoctorTalk">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25pt"
        android:background="@drawable/background_view_page"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:src="@drawable/button_back" />

        <TextView
            android:layout_marginRight="35dp"
            android:layout_marginLeft="15pt"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Hotline Number"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textColor="#000"
        android:fontFamily="@font/amiko"
        android:textSize="30sp"
        android:text="Ours Doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="190dp"
        android:layout_height="2dp"
        android:background="#FE5C43"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:background="@drawable/button_doctor"
                android:layout_width="match_parent"
                android:layout_height="60pt"
                >
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="2dp"
                            android:layout_margin="2dp">

                            <ImageView
                                android:src="@drawable/dr_christophe_gaudeul"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />





                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="4dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <TextView
                                android:textStyle="bold"
                                android:text="Dr.K.M. Golam Kibria"
                                android:textSize="18sp"
                                android:textColor="#000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textColor="@color/colorMain"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="2dp"
                                android:text="MBBS, FCPS"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="1dp"
                                android:text="Skin care specialist"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:background="@color/colorMain"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_margin="4dp"
                            android:src="@drawable/phone_call"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="16dp"
                android:background="@drawable/button_doctor"
                android:layout_width="match_parent"
                android:layout_height="60pt"
                >
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="2dp"
                            android:layout_margin="2dp">

                            <ImageView
                                android:src="@drawable/dr_christophe_gaudeul"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />





                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="4dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <TextView
                                android:textStyle="bold"
                                android:text="Dr.K.M. Golam Kibria"
                                android:textSize="18sp"
                                android:textColor="#000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textColor="@color/colorMain"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="2dp"
                                android:text="MBBS, FCPS"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="1dp"
                                android:text="Skin care specialist"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:background="@color/colorMain"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_margin="4dp"
                            android:src="@drawable/phone_call"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="16dp"
                android:background="@drawable/button_doctor"
                android:layout_width="match_parent"
                android:layout_height="60pt"
                >
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="2dp"
                            android:layout_margin="2dp">

                            <ImageView
                                android:src="@drawable/dr_christophe_gaudeul"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />





                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="4dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <TextView
                                android:textStyle="bold"
                                android:text="Dr.K.M. Golam Kibria"
                                android:textSize="18sp"
                                android:textColor="#000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textColor="@color/colorMain"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="2dp"
                                android:text="MBBS, FCPS"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="1dp"
                                android:text="Skin care specialist"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:background="@color/colorMain"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_margin="4dp"
                            android:src="@drawable/phone_call"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>






        </LinearLayout>
    </ScrollView>

</LinearLayout>