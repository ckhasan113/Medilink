<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginRight="3pt"
    android:layout_marginLeft="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginBottom="8dp"
            android:textColor="#F44336"
            android:id="@+id/hospital_booking_hospital_name_TV"
            android:layout_marginEnd="7dp"
            android:layout_alignParentTop="true"
            tools:text="03-09-2019"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />

        <ImageView
            android:layout_below="@+id/hospital_booking_hospital_name_TV"
            android:id="@+id/hospital_booking_DoctorIV"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/dr_christophe_gaudeul"
            />

        <TextView
            android:textColor="#000000"
            tools:text="Dr. Hasan"
            android:id="@+id/hospital_booking_DoctorNameTV"
            android:layout_alignTop="@+id/hospital_booking_DoctorIV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_toRightOf="@+id/hospital_booking_DoctorIV"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            tools:text="Dr. Hasan, hasasn"
            android:id="@+id/hospital_booking_DoctorDescriptionTV"
            android:layout_below="@+id/hospital_booking_DoctorNameTV"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hospital_booking_DoctorIV"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:textColor="#F44336"
            tools:text="Dr. Hasan"
            android:id="@+id/hospital_booking_TimeTV"
            android:layout_below="@+id/hospital_booking_DoctorDescriptionTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hospital_booking_DoctorIV"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:textColor="#000000"
            android:gravity="center"
            tools:text="DR. hasan"
            android:id="@+id/hospital_booking_AddressTV"
            android:layout_below="@+id/hospital_booking_DoctorIV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hospital_booking_DoctorIV"
            android:layout_alignBottom="@+id/hospital_booking_date"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="5dp"/>


        <TextView
            android:layout_marginBottom="8dp"
            android:textColor="#F44336"
            android:id="@+id/hospital_booking_date"
            android:layout_marginEnd="7dp"
            android:layout_alignStart="@+id/hospital_booking_DoctorIV"
            android:layout_alignEnd="@+id/hospital_booking_DoctorIV"
            android:layout_below="@+id/hospital_booking_DoctorIV"
            tools:text="03-09-2019"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>