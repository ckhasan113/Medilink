<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/eGetVlayout">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/button_doctor"
        android:layout_width="match_parent"
        android:layout_height="80pt"
        >
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="80pt"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80pt"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="2dp"
                    android:layout_margin="2dp">

                    <ImageView

                        android:id="@+id/evImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />





                </LinearLayout>

                <LinearLayout
                    android:layout_margin="4dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_marginTop="20pt"
                        android:id="@+id/evname"
                        android:textStyle="bold"
                        android:text="Square Hospital LTD."
                        android:textSize="24sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/evarea"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:text="Kolkata"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10pt"
                        android:background="@drawable/book_appointment"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#FFF"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Get Medicine"/>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>